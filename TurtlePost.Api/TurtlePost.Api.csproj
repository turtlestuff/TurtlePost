<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>8.0</LangVersion>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <NullableContextOptions>enable</NullableContextOptions>
        <Nullable>enable</Nullable>
        <TargetFramework>netstandard2.1</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Version>1.1.0.0</Version>
        <InformationalVersion>1.1.0-blueprint 🐢</InformationalVersion>
        <RootNamespace>TurtlePost</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <EmbeddedResource Include="Localization/*.json">
            <LogicalName>TurtlePost.Localization.%(FileName)</LogicalName>
        </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="System.Collections.Immutable" Version="1.6.0-preview7.19362.9" />
      <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.6.0-preview7.19362.9" />
      <PackageReference Include="System.Text.Json" Version="4.6.0-preview7.19362.9" />
    </ItemGroup>

</Project>
